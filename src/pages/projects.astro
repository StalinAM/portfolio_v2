---
import CardProjects from '../components/CardProjects.astro'
import Contact from '../components/Contact.astro'
import Layout from '../layouts/Layout.astro'
import { data, components } from '../utils/data'
---

<Layout
  title='Lista de proyectos'
  description='Explora mi portafolio web y sumérgete en una galería de proyectos que reflejan mi dedicación al desarrollo web. Descubre soluciones innovadoras y diseños cautivadores que cuentan la historia de mi pasión por crear experiencias digitales memorables.'
>
  <main
    class='w-full min-h-screen overflow-x-hidden dark:text-gray-100 p-4 mb-8'
  >
    <section
      id='projects'
      class='pt-24 sm:pt-12 flex flex-col w-full max-w-5xl mx-auto'
    >
      <h3 class='text-3xl font-medium text-left mb-10 dark:text-js text-css'>
        Webs
      </h3>
      <ul class='grid grid-cols-box-x gap-8 mb-4'>
        {
          data.map((item) => (
            <CardProjects
              id={item.id}
              image={item.image}
              title={item.title}
              description={item.description}
              tools={item.tools}
              web={item.web}
              repo={item.repository}
            />
          ))
        }
      </ul>
      <h3
        class='mt-8 text-3xl font-medium text-left mb-10 dark:text-js text-css'
      >
        Componentes
      </h3>
      <ul class='grid grid-cols-box-x gap-8 mb-4'>
        {
          components.map((item) => (
            <CardProjects
              id={item.id}
              title={item.title}
              description={item.description}
              tools={item.tools}
              web={item.web}
              repo={item.repository}
            />
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
